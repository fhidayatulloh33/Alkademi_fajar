@model PagiApp.ViewModels.AdminViewModel
@{
  Layout = "_AdminLayout";
}

<div class="card-body">
  <form method="post" asp-action="Edit">
      <input type="hidden" asp-for="IdAdmin">
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Nama">Nama</label>
      <input type="text" class="form-control" asp-for="Nama">
    </div>
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="NoHp">NoHp</label>
      <input type="text" class="form-control" asp-for="NoHp">
    </div>
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Username">Username</label>
      <input type="text" class="form-control" asp-for="Username">
    </div>
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Password">Password</label>
      <input type="text" class="form-control" asp-for="Password">
    </div>
    <div class="text-center">
      <input type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2" value="Tambah Admin">
    </div>
  </form>
</div>