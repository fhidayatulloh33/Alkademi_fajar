@using System.Globalization
@model List<PagiApp.ViewModels.OrderViewModel>
@{
    Layout = "_CustomerLayout";
}


<!-- Start Header Area -->
<header class="header navbar-area">
    <!-- Start Header Bottom -->
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 col-md-6 col-12">
                <div class="nav-inner">
                    <!-- Start Mega Category Menu -->
                    <div class="mega-category-menu">
                    </div>
                    <!-- End Mega Category Menu -->
                    <!-- Start Navbar -->
                    <nav class="navbar navbar-expand-lg">
                        <button class="navbar-toggler mobile-menu-btn" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                            <ul id="nav" class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Home" class="active"
                                        aria-label="Toggle navigation">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Keranjang" asp-action="Index" class="active"
                                        aria-label="Toggle navigation">Keranjang</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Order" asp-action="MyOrder" class="active"
                                        aria-label="Toggle navigation">Order</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Alamat" asp-action="Index" class="active"
                                        aria-label="Toggle navigation">Alamat</a>
                                </li>

                            </ul>
                        </div> <!-- navbar collapse -->
                    </nav>
                    <!-- End Navbar -->
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12">
                <!-- Start Nav Social -->
                <div class="nav-social">
                    <h5 class="title">Follow Us:</h5>
                    <ul>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-facebook-filled"></i></a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-twitter-original"></i></a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-instagram"></i></a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-skype"></i></a>
                        </li>
                    </ul>
                </div>
                <!-- End Nav Social -->
            </div>
        </div>
    </div>
    <!-- End Header Bottom -->
</header>
<!-- End Header Area -->

<h1>Daftar pesanan</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#OrderID</th>
      <th scope="col">Tgl Transaksi</th>
      <th scope="col"> Status </th>
      <th scope="col">Total bayar</th>
      <th scope="col">Detail</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
      {      
        <tr>
        <th scope="row">@item.IdOrder</th>
        <td>@item.TglOrder.ToLongDateString() @item.TglOrder.ToLongTimeString()</td>
        <td>@item.Status</td>
        <td>@item.TotalBayar.ToString("C", new CultureInfo("id-ID"))</td>
            <td>@Html.ActionLink(string.Format("Detail", item.IdOrder, item.TglOrder.ToShortDateString()), "MyOrderDetails", "Order", new {
            id = item.IdOrder 
            })</td>
        </tr>   
      }
    </tbody>
</table>

