@model PagiApp.ViewModels.ProdukViewModel

@{
  Layout = "_AdminLayout";
}

<div class="card-body">
  <form method="post" asp-action="Delete">
    <input type="hidden" asp-for="IdProduct">
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Nama">Nama</label>
      <input disabled type="text" class="form-control" asp-for="Nama">
    </div>
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Deskripsi">Deskripsi</label>
      <input disabled type="text" class="form-control" asp-for="Deskripsi">
    </div>
    <div class="text-center">
      <input type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2" value="Hapus Produk">
    </div>
  </form>
</div>