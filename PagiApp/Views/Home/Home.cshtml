@model IEnumerable<PagiApp.ViewModels.ProdukViewModel>

@{
  Layout = "_CustomerLayout";
}

<header class="header navbar-area">
    <!-- Start Header Bottom -->
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 col-md-6 col-12">
                <div class="nav-inner">
                    <!-- Start Mega Category Menu -->
                    <div class="mega-category-menu">
                    </div>
                    <!-- End Mega Category Menu -->
                    <!-- Start Navbar -->
                    <nav class="navbar navbar-expand-lg">
                        <button class="navbar-toggler mobile-menu-btn" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                            <ul id="nav" class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Home" class="active" aria-label="Toggle navigation">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Keranjang" asp-action="Index" class="active" aria-label="Toggle navigation">Keranjang</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Alamat" asp-action="Index" class="active" aria-label="Toggle navigation">Alamat</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="AccountCustomer" asp-action="Logout" class="active" aria-label="Toggle navigation">Logout</a>
                                </li>

                            </ul>
                        </div> <!-- navbar collapse -->
                    </nav>
                    <!-- End Navbar -->
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12">
                <!-- Start Nav Social -->
                <div class="nav-social">
                    <h5 class="title">Follow Us:</h5>
                    <ul>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-facebook-filled"></i></a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-twitter-original"></i></a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-instagram"></i></a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><i class="lni lni-skype"></i></a>
                        </li>
                    </ul>
                </div>
                <!-- End Nav Social -->
            </div>
        </div>
    </div>
    <!-- End Header Bottom -->
</header>

<section class="trending-product section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>daftar Product</h2>
                    <p>Pilih produk kami</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model){
            <div class="col-lg-3 col-md-6 col-12">
                <!-- Start Single Product -->
                <div class="single-product">
                    <div class="product-image">
                        <img src="~/@item.Gambar" alt="#">
                        <div class="button">
                            <a class="btn" href="/Home/Produk/@item.IdProduct">
                                <i class="lni lni-cart"></i> 
                               Add to Card
                            </a>
                        </div>
                    </div>
                    <div class="product-info">
                        <span class="category">
                                @foreach (var kategori in item.Kategories)
                                {
                                <p>@kategori.Nama</p>
                                }
                        </span>
                        <h4 class="title">
                            <a href="product-grids.html">@item.Nama</a>
                        </h4>
                        <ul class="review">
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star-filled"></i></li>
                            <li><i class="lni lni-star"></i></li>
                            <li><span>4.0 Review(s)</span></li>
                        </ul>
                        <div class="price">
                            <span>Rp. @item.Harga</span>
                        </div>
                    </div>
                </div>
                <!-- End Single Product -->
            </div>
            }
        </div>
    </div>
</section>