@model PagiApp.ViewModels.KategoriViewModel

@{
  Layout = "_AdminLayout";
}

<div class="card-body">
  <form method="post" asp-action="Edit">
    <input asp-for="IdKategori" type="hidden" class="form-control" />
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Nama">Nama</label>
      <input type="text" class="form-control" asp-for="Nama">
    </div>
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Deskripsi">Deskripsi</label>
      <input type="text" class="form-control" asp-for="Deskripsi">
    </div>
    <div class="input-group input-group-outline my-3">
      <label class="form-label" asp-for="Icon">Icon</label>
      <input type="text" class="form-control" asp-for="Icon">
    </div>
    <div class="text-center">
      <input type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2" value="Tambah Kategori">
    </div>
  </form>
</div>
